char	*ft_strncat(char *dest, char *src, int nb)
{
	int		i;
	int		j;

	i = 0;
	while (dest[i])
		i++;
	j = 0;
	while (nb != 0)
	{
		dest[i] = src[j];
		j++;
		i++;
		nb--;
	}
	return (dest);
}
